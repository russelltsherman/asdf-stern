#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

gh_org="stern"
gh_repo="stern"

list_versions() {
  cmd="curl --silent --location"
  [ -n "$GITHUB_API_TOKEN" ] && cmd="$cmd --header 'Authorization: token $GITHUB_API_TOKEN'"
  cmd="$cmd https://api.github.com/repos/$gh_org/$gh_repo/releases"

  eval "$cmd" | grep -oE "tag_name\": *\".{1,15}\"," | sed 's/tag_name\": *\"v*//;s/\",//'
}

sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' | \
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

list_versions | sort_versions | xargs
